---
import { Image } from "astro:assets";
import locationIcon from "../assets/LocationIcon.svg";
---

<div class="video">
  <div class="text">
    <img class="furniture" src="/LocationIcon.svg" alt="Image of a Chair" />
    PANKSTRASSE 23, 13347
  </div>
  <video src="/video.mp4" muted autoplay loop controls={false}></video>
  <!-- <div class="placeholder"></div> -->
</div>

<style lang="scss">
  .video {
    padding: 70px 0 30px 0;

    .text {
      font-size: 24px;
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
    }

    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .placeholder {
      width: 100%;
      background-color: #e4e4e4;
      aspect-ratio: 338 / 520;
    }
  }
</style>
