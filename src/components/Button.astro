---
export interface Props {
  text: string;
}

const { text } = Astro.props;
---

<button>
  {text}
</button>

<style lang="scss">
  button {
    background: none;
    padding: 14px 18px;
    font-size: 15px;
    width: 100%;
    margin-bottom: 20px;
    appearance: none;
    border: 1px solid #000;
    color: #000;
  }
</style>
