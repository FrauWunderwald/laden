  });
</script>

<script>
  import * as basicScroll from "basicscroll";
  const placeholder = document.querySelector("[date-replace]") as any;

  console.log(placeholder);

  const instance = basicScroll.create({
    elem: placeholder,
    // direct: true,
    from: "top-top",
    to: "bottom-top",
    props: {
      "--translateY": {
        from: "0px",
        to: "250px",
      },
    },
  });

  instance.start();

  window.onresize = () => {
    instance.calculate();
    instance.update();
  };
</script>

